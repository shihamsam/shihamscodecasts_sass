<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Dev Collab Community</h1>
        <p>Welcome to the Dev Collab community. Users must fillout in order to be visible in the community.</p>
        <ul class="list-unstyled">
            <% @users.each do |u|  %>
                <% if u.profile %>
                    <li>
                        <div class="well row <%= cycle('white-bg','') %>">
                            <div class="col-sm-4">
                                <%= link_to u do %>
                                     <%= image_tag u.profile.avatar.url(:thumb), class: 'user-index-avatar' %>
                                <% end %>
                             </div>
                             <div>
                                <%= link_to u do %>
                                    <h2><%= u.profile.first_name %> <%= u.profile.last_name %></h2>
                                <% end %>
                                <p>
                                    <%= u.profile.job_title %>
                                    <% if u.plan_id == 2 %>
                                        <span class="label label-danger">PRO</span>
                                    <% end %>
                                </p>
                             </div>
                              
                         </div>
                    </li>
                <% end %>
            <% end %>
        </ul>
    </div>
</div>